{
  "name": "@stanley-marketing/lottie-animation-search",
  "version": "1.0.0",
  "description": "MCP Server for searching and downloading free Lottie animations from LottieFiles",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "lottie-animation-search": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "lottie",
    "lottiefiles",
    "animation",
    "model-context-protocol"
  ],
  "author": "Stanley Marketing",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stanley-marketing/lottie-animation-search.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
